# Healthcare Claim System - Environment Variables

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/healthcare_claims
REDIS_URL=redis://localhost:6379

# SMS Gateway Configuration (Viettel)
SMS_VIETTEL_ENABLED=false
SMS_VIETTEL_API_KEY=your_viettel_api_key
SMS_VIETTEL_BASE_URL=https://api.viettel.vn/sms
SMS_VIETTEL_FROM_NUMBER=your_viettel_number

# SMS Gateway Configuration (VNPT)
SMS_VNPT_ENABLED=false
SMS_VNPT_API_KEY=your_vnpt_api_key
SMS_VNPT_BASE_URL=https://api.vnpt.vn/sms
SMS_VNPT_FROM_NUMBER=your_vnpt_number

# Email Service Configuration (SendGrid)
SENDGRID_ENABLED=false
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@healthclaim.vn
SENDGRID_FROM_NAME=Healthcare Claim System

# Cloud Storage Configuration (AWS S3)
AWS_S3_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=healthcare-claims-storage

# Cloud Storage Configuration (MinIO)
MINIO_ENABLED=false
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=healthcare-claims

# OCR Service Configuration (Google Vision)
GOOGLE_VISION_ENABLED=false
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Maps API Configuration (Google Maps)
GOOGLE_MAPS_ENABLED=false
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Identity Verification Configuration
CIVIC_ID_ENABLED=false
CIVIC_ID_API_KEY=your_civic_id_api_key
CIVIC_ID_BASE_URL=https://api.civic.gov.vn

# Payment Gateway Configuration (VNPay)
VNPAY_ENABLED=false
VNPAY_API_KEY=your_vnpay_api_key
VNPAY_MERCHANT_ID=your_vnpay_merchant_id
VNPAY_SECRET_KEY=your_vnpay_secret_key
VNPAY_ENVIRONMENT=sandbox
VNPAY_BASE_URL=https://sandbox-web.vnpay.vn

# Hospital Database Configuration
HOSPITAL_DB_ENABLED=false
HOSPITAL_DB_CONNECTION_STRING=mongodb://localhost:27017/hospital_system
HOSPITAL_DB_NAMES=hospital_system
HOSPITAL_DB_SYNC_INTERVAL=3600000

# Government API Configuration
GOVERNMENT_API_ENABLED=false
GOVERNMENT_API_KEY=your_government_api_key
GOVERNMENT_API_BASE_URL=https://api.gov.vn
GOVERNMENT_API_CERT_PATH=/path/to/certificate.pem
GOVERNMENT_API_AUTH_METHOD=api-key

# Application Configuration
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000
