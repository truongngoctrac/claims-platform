# Vietnamese Healthcare Claims System - Staging Environment
# This file contains staging environment variables
# DO NOT commit sensitive values - use environment variable injection

# Application Settings
NODE_ENV=staging
FLASK_ENV=staging
FLASK_DEBUG=0
LOG_LEVEL=INFO

# Server Configuration
PORT=8080
API_BASE_URL=https://api-staging.healthcare-claims.vn
FRONTEND_URL=https://staging.healthcare-claims.vn
CORS_ORIGINS=https://staging.healthcare-claims.vn,https://api-staging.healthcare-claims.vn

# Database Configuration (Use environment variable injection)
MONGODB_URI=${MONGODB_URI}
MONGODB_ROOT_USERNAME=${MONGODB_ROOT_USERNAME}
MONGODB_ROOT_PASSWORD=${MONGODB_ROOT_PASSWORD}
MONGODB_DATABASE=healthcare_claims_staging

# Redis Configuration
REDIS_URL=${REDIS_URL}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Elasticsearch Configuration
ELASTICSEARCH_URL=${ELASTICSEARCH_URL}
ELASTICSEARCH_USERNAME=${ELASTICSEARCH_USERNAME}
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD}

# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_DAYS=7

# Email Configuration
EMAIL_SMTP_HOST=${EMAIL_SMTP_HOST}
EMAIL_SMTP_PORT=${EMAIL_SMTP_PORT}
EMAIL_USERNAME=${EMAIL_USERNAME}
EMAIL_PASSWORD=${EMAIL_PASSWORD}
EMAIL_USE_TLS=true
EMAIL_FROM_ADDRESS=noreply@healthcare-claims.vn
EMAIL_FROM_NAME=Healthcare Claims Staging

# File Storage Configuration
UPLOAD_FOLDER=/app/uploads/staging
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=3600
CORS_MAX_AGE=86400

# Third-Party Integrations
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=staging

# Monitoring & Analytics
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}

# Vietnamese Localization
DEFAULT_LANGUAGE=vi
SUPPORTED_LANGUAGES=vi,en
TIMEZONE=Asia/Ho_Chi_Minh
CURRENCY=VND

# Healthcare Specific
MEDICAL_RECORD_ENCRYPTION=true
AUDIT_LOG_ENABLED=true
PATIENT_DATA_RETENTION_DAYS=2555  # 7 years
CLAIM_PROCESSING_TIMEOUT_HOURS=48

# API Keys (Use environment variable injection)
ENCRYPTION_KEY=${ENCRYPTION_KEY}
API_KEY_INTERNAL=${API_KEY_INTERNAL}
API_KEY_EXTERNAL=${API_KEY_EXTERNAL}

# Docker Configuration
DOCKER_REGISTRY=${DOCKER_REGISTRY}
VERSION=${VERSION}
DEPLOYMENT_METHOD=docker-compose

# Database Seeding (Staging)
SEED_DATABASE=false
CREATE_SAMPLE_DATA=false

# Performance Settings
CACHE_TTL_SECONDS=600
CACHE_MAX_ENTRIES=5000
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT_SECONDS=30

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_BULK_OPERATIONS=true
FEATURE_DOCUMENT_CLASSIFICATION=true

# Service URLs
API_GATEWAY_URL=http://api-gateway:8000
CLAIMS_SERVICE_URL=http://basic-claims-service:5000
POLICY_SERVICE_URL=http://policy-management-service:5000
USER_SERVICE_URL=http://user-management-service:5000

# Notification Settings
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
TEAMS_WEBHOOK_URL=${TEAMS_WEBHOOK_URL}
WEBHOOK_TIMEOUT_SECONDS=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/backups/staging

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
FORCE_HTTPS=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# Staging Specific
MOCK_EXTERNAL_SERVICES=false
BYPASS_AUTHENTICATION=false
ENABLE_TEST_ROUTES=false
GENERATE_SWAGGER_DOCS=true

# Resource Limits
MAX_MEMORY_MB=1024
MAX_CPU_CORES=1
MAX_CONNECTIONS=100
REQUEST_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/healthcare-claims.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
READINESS_CHECK_TIMEOUT=30

# Network Configuration
NETWORK_TIMEOUT_SECONDS=30
MAX_REQUEST_SIZE_MB=100
ENABLE_COMPRESSION=true

# Database Performance
DB_CONNECTION_POOL_MIN=5
DB_CONNECTION_POOL_MAX=20
DB_QUERY_TIMEOUT_SECONDS=30
DB_STATEMENT_TIMEOUT_SECONDS=60

# Cache Configuration
REDIS_CONNECTION_POOL_SIZE=10
REDIS_TIMEOUT_SECONDS=5
CACHE_DEFAULT_TTL=3600

# Vietnamese Healthcare Compliance
GDPR_COMPLIANCE=true
PATIENT_CONSENT_REQUIRED=true
DATA_ANONYMIZATION=true
AUDIT_TRAIL_ENABLED=true

# Integration Testing
INTEGRATION_TEST_ENABLED=true
LOAD_TEST_ENABLED=false
PERFORMANCE_TEST_ENABLED=true

# Monitoring Alerts
ALERT_EMAIL=${ALERT_EMAIL}
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=2000
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85

# Deployment Configuration
BLUE_GREEN_DEPLOYMENT=false
CANARY_DEPLOYMENT=false
ROLLBACK_ENABLED=true
ZERO_DOWNTIME_DEPLOYMENT=true
